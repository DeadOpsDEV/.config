module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = NotoEmoji-Regular:pixelsize=10;1
font-4 = Font Awesome 5 Free:pixelsize=15;3
font-5 = Font Awesome 5 Free Solid:pixelsize=12.5;3
font-6 = Font Awesome 5 Brands:pixelsize=14;3

modules-left = bspwm i3
