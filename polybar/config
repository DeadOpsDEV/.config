;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #f7020f
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;margin-top = 5
;offset-x = 0%
;offset-y = 0%
radius = 0
fixed-center = false
;override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 3
;line-color = #f00
# ATTENTION LES BORDER PEUVENT FAIRE DES MARGES
;border-size = 0
;border-color = #00000000

padding-left = 0
padding-right = 2

